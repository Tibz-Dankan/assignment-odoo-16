<odoo>
    <record model="ir.ui.view" id="purchase_rfq_vendor_selection_form_view">
        <field name="name">Purchase RFQ Vendor Selection Form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="vendor_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_rfq_bids_tree_view">
        <field name="name">Purchase RFQ Bids Tree View</field>
        <field name="model">purchase.order.bid</field>
        <field name="arch" type="xml">
            <tree>
                <field name="vendor_id"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_rfq_winning_bid_form_view">
        <field name="name">Purchase RFQ Winning Bid Form View</field>
    </record>
</odoo>
